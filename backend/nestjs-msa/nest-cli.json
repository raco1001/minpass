{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "root": "apps",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "projects": {
    "activities": {
      "type": "application",
      "root": "apps/activities",
      "entryFile": "main",
      "sourceRoot": "apps/activities/src",
      "compilerOptions": {
        "tsConfigPath": "apps/activities/tsconfig.json"
      }
    },
    "apis": {
      "type": "application",
      "root": "apps/apis",
      "entryFile": "main",
      "sourceRoot": "apps/apis/src",
      "compilerOptions": {
        "tsConfigPath": "apps/apis/tsconfig.json",
        "watchAssets": true,
        "assets": [
          {
            "include": "../../libs/contracts/proto/**/*.proto",
            "outDir": "../../dist/libs/contracts/proto"
          }
        ]
      }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.json"
      }
    },
    "integrations": {
      "type": "library",
      "root": "libs/integrations",
      "entryFile": "index",
      "sourceRoot": "libs/integrations/src",
      "compilerOptions": {
        "tsConfigPath": "libs/integrations/tsconfig.lib.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "journals": {
      "type": "application",
      "root": "apps/journals",
      "entryFile": "main",
      "sourceRoot": "apps/journals/src",
      "compilerOptions": {
        "tsConfigPath": "apps/journals/tsconfig.json"
      }
    },
    "notifications": {
      "type": "application",
      "root": "apps/notifications",
      "entryFile": "main",
      "sourceRoot": "apps/notifications/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notifications/tsconfig.json"
      }
    },
    "ontology": {
      "type": "application",
      "root": "apps/ontology",
      "entryFile": "main",
      "sourceRoot": "apps/ontology/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ontology/tsconfig.json"
      }
    },
    "schedules": {
      "type": "application",
      "root": "apps/schedules",
      "entryFile": "main",
      "sourceRoot": "apps/schedules/src",
      "compilerOptions": {
        "tsConfigPath": "apps/schedules/tsconfig.json"
      }
    },
    "tasks": {
      "type": "application",
      "root": "apps/tasks",
      "entryFile": "main",
      "sourceRoot": "apps/tasks/src",
      "compilerOptions": {
        "tsConfigPath": "apps/tasks/tsconfig.json"
      }
    },
    "users": {
      "type": "application",
      "root": "apps/users",
      "entryFile": "main",
      "sourceRoot": "apps/users/src",
      "compilerOptions": {
        "tsConfigPath": "apps/users/tsconfig.json",
        "watchAssets": true,
        "assets": [
          {
            "include": "../../libs/contracts/proto/users/v1/users.proto",
            "outDir": "../../dist/libs/contracts/proto/users/v1"
          },
          {
            "include": "../../libs/contracts/proto/users/v1/consents.proto",
            "outDir": "../../dist/libs/contracts/proto/users/v1"
          }
        ]
      }
    }
  }
}
