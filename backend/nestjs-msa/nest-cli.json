{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "./",
  "entryFile": "src/main",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/apis/tsconfig.app.json"
  },
  "projects": {
    "activities": {
      "type": "application",
      "root": "apps/activities",
      "entryFile": "main",
      "sourceRoot": "apps/activities/src",
      "compilerOptions": {
        "tsConfigPath": "apps/activities/tsconfig.app.json"
      }
    },
    "apis": {
      "type": "application",
      "root": "apps/apis",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/apis/tsconfig.app.json",
        "assets": ["proto/auth/v1/*.proto", "proto/users/v1/*.proto"],
        "watchAssets": true
      }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json",
        "assets": ["proto/auth/v1/*.proto", "proto/users/v1/*.proto"],
        "watchAssets": true
      }
    },
    "config": {
      "type": "library",
      "root": "libs/config",
      "entryFile": "index",
      "sourceRoot": "libs/config/src",
      "compilerOptions": {
        "tsConfigPath": "libs/config/tsconfig.lib.json"
      }
    },
    "contracts": {
      "type": "library",
      "root": "libs/contracts",
      "entryFile": "index",
      "sourceRoot": "libs/contracts/src",
      "compilerOptions": {
        "tsConfigPath": "libs/contracts/tsconfig.lib.json"
      }
    },
    "integrations": {
      "type": "library",
      "root": "libs/integrations",
      "entryFile": "index",
      "sourceRoot": "libs/integrations/src",
      "compilerOptions": {
        "tsConfigPath": "libs/integrations/tsconfig.lib.json"
      }
    },
    "journals": {
      "type": "application",
      "root": "apps/journals",
      "entryFile": "main",
      "sourceRoot": "apps/journals/src",
      "compilerOptions": {
        "tsConfigPath": "apps/journals/tsconfig.app.json"
      }
    },
    "logging": {
      "type": "library",
      "root": "libs/logging",
      "entryFile": "index",
      "sourceRoot": "libs/logging/src",
      "compilerOptions": {
        "tsConfigPath": "libs/logging/tsconfig.lib.json"
      }
    },
    "notifications": {
      "type": "application",
      "root": "apps/notifications",
      "entryFile": "main",
      "sourceRoot": "apps/notifications/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notifications/tsconfig.app.json"
      }
    },
    "ontology": {
      "type": "application",
      "root": "apps/ontology",
      "entryFile": "main",
      "sourceRoot": "apps/ontology/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ontology/tsconfig.app.json"
      }
    },
    "schedules": {
      "type": "application",
      "root": "apps/schedules",
      "entryFile": "main",
      "sourceRoot": "apps/schedules/src",
      "compilerOptions": {
        "tsConfigPath": "apps/schedules/tsconfig.app.json"
      }
    },
    "tasks": {
      "type": "application",
      "root": "apps/tasks",
      "entryFile": "main",
      "sourceRoot": "apps/tasks/src",
      "compilerOptions": {
        "tsConfigPath": "apps/tasks/tsconfig.app.json"
      }
    },
    "users": {
      "type": "application",
      "root": "apps/users",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/users/tsconfig.app.json",
        "watchAssets": true,
        "assets": [
          {
            "include": "proto/users/v1/*.proto",
            "watchAssets": true
          }
        ]
      }
    },
    "utils": {
      "type": "library",
      "root": "libs/utils",
      "entryFile": "index",
      "sourceRoot": "libs/utils/src",
      "compilerOptions": {
        "tsConfigPath": "libs/utils/tsconfig.lib.json"
      }
    }
  }
}
