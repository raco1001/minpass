{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "monorepo": true,
  "root": "apps",
  "projects": {
    "activities": {
      "type": "application",
      "root": "apps/activities",
      "entryFile": "main",
      "sourceRoot": "apps/activities/src",
      "compilerOptions": {
        "tsConfigPath": "apps/activities/tsconfig.app.json"
      }
    },
    "apis": {
      "type": "application",
      "root": "apps/apis",
      "entryFile": "main",
      "sourceRoot": "apps/apis/src",
      "compilerOptions": {
        "tsConfigPath": "apps/apis/tsconfig.app.json"
      }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "journals": {
      "type": "application",
      "root": "apps/journals",
      "entryFile": "main",
      "sourceRoot": "apps/journals/src",
      "compilerOptions": {
        "tsConfigPath": "apps/journals/tsconfig.app.json"
      }
    },
    "notifications": {
      "type": "application",
      "root": "apps/notifications",
      "entryFile": "main",
      "sourceRoot": "apps/notifications/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notifications/tsconfig.app.json"
      }
    },
    "ontology": {
      "type": "application",
      "root": "apps/ontology",
      "entryFile": "main",
      "sourceRoot": "apps/ontology/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ontology/tsconfig.app.json"
      }
    },
    "schedules": {
      "type": "application",
      "root": "apps/schedules",
      "entryFile": "main",
      "sourceRoot": "apps/schedules/src",
      "compilerOptions": {
        "tsConfigPath": "apps/schedules/tsconfig.app.json"
      }
    },
    "tasks": {
      "type": "application",
      "root": "apps/tasks",
      "entryFile": "main",
      "sourceRoot": "apps/tasks/src",
      "compilerOptions": {
        "tsConfigPath": "apps/tasks/tsconfig.app.json"
      }
    },
    "users": {
      "type": "application",
      "root": "apps/users",
      "entryFile": "main",
      "sourceRoot": "apps/users/src",
      "compilerOptions": {
        "tsConfigPath": "apps/users/tsconfig.app.json"
      }
    }
  }
}