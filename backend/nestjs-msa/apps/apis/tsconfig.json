{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": false,
    "outDir": "../../dist/apps/apis",
    "paths": {
      "@mariadb": ["../../libs/integrations/database/mariadb"],
      "@mariadb/*": ["../../libs/integrations/database/mariadb/*"],
      "@common": ["../../libs/common"],
      "@common/*": ["../../libs/common/*"],
      "@contracts": ["../../libs/contracts"],
      "@contracts/*": ["../../libs/contracts/*"],
      "@src": ["src"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "../../libs/common/services.constant.ts"],
  "exclude": ["../../node_modules", "../../dist", "test", "**/*spec.ts"]
}
