# API Gateway Configuration
PORT=3000
FRONTEND_URL=http://localhost:5174

# OAuth Provider Settings
# 사용할 provider를 쉼표로 구분 (예: google,github,kakao)
ENABLED_PROVIDERS=google

# Base URL for OAuth callbacks
REDIRECT_BASE_URL=http://localhost:3000

# ===================================
# Google OAuth Configuration
# ===================================
# Google Cloud Console에서 발급받은 Client ID와 Secret을 입력하세요
# https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_CALLBACK_PATH=/auth/login/google/callback

# ===================================
# GitHub OAuth Configuration
# ===================================
# GitHub Developer Settings에서 발급받은 Client ID와 Secret을 입력하세요
# https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id-here
GITHUB_CLIENT_SECRET=your-github-client-secret-here
GITHUB_CALLBACK_PATH=/auth/login/github/callback

# ===================================
# Kakao OAuth Configuration
# ===================================
# Kakao Developers에서 발급받은 REST API Key와 Secret을 입력하세요
# https://developers.kakao.com/
KAKAO_CLIENT_ID=your-kakao-rest-api-key-here
KAKAO_CLIENT_SECRET=your-kakao-client-secret-here
KAKAO_CALLBACK_PATH=/auth/login/kakao/callback

# ===================================
# gRPC Settings (Auth 서비스 연결)
# ===================================
AUTH_GRPC_TARGET_URL=localhost:4002
CA_CERT_PATH=certs/ca.crt
CLIENT_KEY_PATH=certs/client.key
CLIENT_CERT_PATH=certs/client.crt
